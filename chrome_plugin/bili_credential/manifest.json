{
  "manifest_version": 3,
  "name": "bili_credential",
  "version": "1.0.0",
  "description": "B站认证数据获取和同步工具",
  "permissions": [
    "cookies",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://www.bilibili.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "B站认证数据"
  },
  "content_scripts": [
    {
      "matches": ["https://www.bilibili.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
